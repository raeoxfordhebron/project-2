<!DOCTYPE html>
<html lang="en">
    <%- include("../partials/head.ejs") %>
<body>
    <%- include("../partials/header.ejs") %>
    <main>
        <div>
            <h1>Buster Block</h1>
        </div>
        <div>
            <% movies.forEach((movie, index) => { %>
                <a href="/movie/<%= movie.id %>"><h2><%= movie.title %></h2></a>
                <div>
                    <span><%= movie.notes %></span>
                </div>
                <div>
                    <span><%= movie.genre %></span>
                </div>
                <div>
                    <a href="/movie/<%= movie._id %>/edit"><button>Edit</button></a>
                </div>
                <div>
                    <form action="/movie/<%= movie._id %>?_method=DELETE" method="POST">
                        <input type="submit" value="Delete">
                    </form>
                </div>
            <% }) %>
        </div>
    </main>
</body>
</html>